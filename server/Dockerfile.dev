# Koristimo laganu verziju Node-a
FROM node:20-alpine

WORKDIR /app

# Kopiramo package fajlove i instaliramo zavisnosti
COPY package*.json ./
RUN apk add --no-cache g++ make python3 && npm install

# Kopiramo ostatak koda
COPY . .

# Eksponiramo port koji server koristi
EXPOSE 3000

# Start server in dev mode
CMD ["npm", "run", "dev"]
