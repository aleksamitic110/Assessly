# Ovo je samo example ti kod sebe moras lokalno da kreiras fajl nesto.env u kome ce da se nadju tvoje lokalne varijable okruzenja 
#za povezivanje sa bazama


# Server Configuration
PORT=3000
NODE_ENV=development
JWT_SECRET=change_me_to_a_long_random_string_at_least_32_chars
JWT_EXPIRES_IN=1h
COOKIE_SECURE=false
REQUEST_SIZE_LIMIT=512kb
TRUST_PROXY=
CORS_ORIGINS=http://localhost:5173

# Redis
REDIS_URL=redis://localhost:6379
REDIS_TLS=false
REDIS_TLS_REJECT_UNAUTHORIZED=true

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=change_me

# Cassandra (Astra or local)
CASSANDRA_CLIENT_ID=
CASSANDRA_CLIENT_SECRET=
CASSANDRA_KEYSPACE=default_keyspace
CASSANDRA_BUNDLE_PATH=./secure-connect-assessly-cassandra.zip

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
APP_BASE_URL=http://localhost:5173
